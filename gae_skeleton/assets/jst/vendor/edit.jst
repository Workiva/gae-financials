<form class="edit containter-fluid well form-horizontal">
    <div class="row-fluid">
        <fieldset>
            <div class="control-group">
                <label for="name" class="control-label">Name:</label>
                <div class="control">
                    <input type="text" value="<%= name %>" id="name" class="name" placeholder="Name..." />
                </div>
            </div>
            <div class="control-group">
                <div class="control">
                    <fieldset class="tags">
                        <legend>Tags:</legend>
                    </fieldset>
                    <br />
                    <a class="add_tag btn-small btn-primary">add tag</a>
                </div>
            </div>
            <div class="control-group">
                <div class="control">
                    <textarea class="notes input-xlarge" placeholder="Notes..."><%= notes %></textarea>
                </div>
            </div>
        </fieldset>
        <a class="save btn-small">Save</a>
        <a class="destroy btn-small btn-danger">Delete</a>
    </div>
</form>
